{
  "build": {
    "args": {
      "PYTHON_VERSION": "3.10"
    },
    "context": "..",
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "charliermarsh.ruff",
        "GitHub.copilot-chat",
        "GitHub.copilot",
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "ms-python.vscode-pylance"
      ],
      "settings": {
        "[python]": {
          "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
          },
          "editor.defaultFormatter": "charliermarsh.ruff",
          "editor.formatOnSave": true
        },
        "files.exclude": {
          "**/*.pyc": true,
          "**/.pytest_cache": true,
          "**/__pycache__": true
        },
        "python.defaultInterpreterPath": "/workspaces/insecure-banking/.venv/bin/python",
        "python.formatting.provider": "none",
        "python.linting.enabled": true,
        "python.linting.ruffEnabled": true,
        "python.terminal.activateEnvironment": true,
        "python.testing.pytestArgs": [
          "tests"
        ],
        "python.testing.pytestEnabled": true,
        "python.testing.unittestEnabled": false
      }
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "forwardPorts": [
    8000
  ],
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "name": "Insecure Banking - Python 3.10 + uv",
  "portsAttributes": {
    "8000": {
      "label": "Django Dev Server",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": "bash .devcontainer/post-create.sh",
  "postStartCommand": "python manage.py migrate --noinput",
  "remoteEnv": {
    "PATH": "/workspaces/insecure-banking/.venv/bin:${containerEnv:PATH}",
    "PYTHONDONTWRITEBYTECODE": "1",
    "PYTHONUNBUFFERED": "1"
  },
  "remoteUser": "vscode"
}
